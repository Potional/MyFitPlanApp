<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication">

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.RecipesActivity" />
        <activity android:name=".activities.ExercisesPlansActivity" />
        <activity android:name=".activities.CalendarActivity" />
        <activity android:name=".activities.DayDetailsActivity" />
        <activity
            android:name=".activities.AddRecipeActivity"
            android:parentActivityName=".activities.RecipesActivity" />
        <activity
            android:name=".activities.AddExercisePlanActivity"
            android:parentActivityName=".activities.ExercisesPlansActivity" />
        <activity android:name=".activities.AddRecipeToDayActivity" />
        <activity android:name=".activities.AddExerciseToDayActivity" />
        <activity
            android:name=".activities.RecipeDetailsActivity"
            android:parentActivityName=".activities.RecipesActivity" />
        <activity
            android:name=".activities.ExercisePlanDetailsActivity"
            android:parentActivityName=".activities.ExercisesPlansActivity" />
        <activity
            android:name=".activities.TimerActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.ProgressionActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.ProgressionDetailsActivity"
            android:parentActivityName=".activities.ProgressionActivity" />
        <activity
            android:name=".activities.ChartsActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.WeightChartActivity"
            android:parentActivityName=".activities.ChartsActivity" />
        <activity
            android:name=".activities.CalorieChartActivity"
            android:parentActivityName=".activities.ChartsActivity" />

    </application>

</manifest>